pipeline {
    agent any

    stages {
        stage('Update configmap') {
            environment {
                TESTJENKINS_MATER_PASS = credentials('TESTJENKINS_MATER_PASS') // ID de la credencial del secreto
            }
            steps {
                withCredentials([usernamePassword(credentialsId: 'TESTJENKINS_MATER_PASS', passwordVariable: 'MASTER_PASS', usernameVariable: 'MASTER_USER')]) {
                    // Ejecuta el script .sh con la credencial en el entorno
                    sh '''
                        #!/bin/bash

                        export RESILIENCE_PROPERTIES=${RESILIENCE_PROPERTIES}
                        export APP_PASSWORD=${APP_PASSWORD}
                        export REDIS_PASSWORD=${REDIS_PASSWORD}
                        chmod +x ./scripts/update-properties-01-configmap.sh
                        ./scripts/update-properties-01-configmap.sh
                    '''
                }
            }
        }
        stage('Wait') {
            steps {
                script {
                    sh 'chmod +x ./scripts/update-properties-02-wait.sh'
                    sh './scripts/update-properties-02-wait.sh'
                }
            }
        }
        stage('Refresh pods') {
            steps {
                script {
                    sh 'chmod +x ./scripts/update-properties-03-refresh-pods.sh'
                    sh './scripts/update-properties-03-refresh-pods.sh'
                }
            }
        }
    }

    post {
        success {
            echo 'Update properties completed successfully!'
        }
        failure {
            echo 'Update properties failed!'
        }
    }
}
