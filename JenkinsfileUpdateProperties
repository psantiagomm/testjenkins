pipeline {
    agent any

    stages {
        stage('Update configmap') {
            steps {
                script {
                    sh 'chmod +x ./scripts/update-properties-01-configmap.sh'
                    sh './scripts/update-properties-01-configmap.sh'
                }
            }
        }
        stage('Wait') {
            steps {
                script {
                    sh 'chmod +x ./scripts/update-properties-02-wait.sh'
                    sh './scripts/update-properties-02-wait.sh'
                }
            }
        }
        stage('Refresh pods') {
            steps {
                script {
                    sh 'chmod +x ./scripts/update-properties-03-refresh-pods.sh'
                    sh './scripts/update-properties-03-refresh-pods.sh'
                }
            }
        }
    }

    post {
        success {
            echo 'Update properties completed successfully!'
        }
        failure {
            echo 'Update properties failed!'
        }
    }
}
